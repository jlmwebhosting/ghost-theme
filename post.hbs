{{!< default}}

<section class="articles">
    {{#post}}

    <article class="{{post_class}}">
        <header class="post_header">
            <h1>{{{title}}}</h1>
            <i class="fa fa-clock-o"></i> &nbsp; <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> &nbsp; <i class="fa fa-comments"></i> &nbsp; <a href="{{url}}#disqus_thread" class="comment_link">COMMENTS</a>
            <section class="tags">
                <i class="fa fa-tag"></i> &nbsp; {{#tags}}{{#if @last}}{{tag}}, &nbsp; {{else}}{{tag}}{{/if}}{{/tags}}
            </section>
        </header>

        <hr>


        <section class="post_excerpt language-php">
            {{content}}
        </section>
    </article>

    <section class="share">
        Share: &nbsp;
        <a class="twitter" href="http://twitter.com/share?url={{url absolute="true"}}&amp;text={{title}}"
            onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            <i class="fa fa-twitter-square fa-lg"></i>
        </a> &nbsp;
        <a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
            onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            <i class="fa fa-facebook-square fa-lg"></i>
        </a> &nbsp;
        <a class="google" href="https://plus.google.com/share?url={{url absolute="true"}}"
           onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
            <i class="fa fa-google-plus-square fa-lg"></i>
        </a> &nbsp;
        <a class="google" href="javascript:void((function()%7Bvar%20e=document.createElement('script');e.setAttribute('type','text/javascript');e.setAttribute('charset','UTF-8');e.setAttribute('src','http://assets.pinterest.com/js/pinmarklet.js?r='+Math.random()*99999999);document.body.appendChild(e)%7D)());">
            <i class="fa fa-pinterest-square fa-lg"></i>
        </a>
    </section>

    {{#if author}}
    <section class="author-profile">
        <div class="author-image">
            <img class="author-image-inner" src="{{author.image}}" />
        </div>
        <div class="author-bio">
            <div class="author-name">{{author.name}}</div>
            <div class="author-bio-text">{{author.bio}}</div>
        </div>
    </section>
    {{/if}}

    {{/post}}
</section>

<div class="comments">
    <div id="disqus_thread"></div>
</div>

<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'happyaccidentsme'; // required: replace example with your forum shortname

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
